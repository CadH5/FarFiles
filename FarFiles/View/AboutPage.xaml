<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarFiles.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout>
        <Image Source="cadh5_logo.png" WidthRequest="100"/>
        <Label Text="FarFiles"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label x:Name="lblVersion"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    
        <!-- Underlined clickable link -->
        <Label Text="https://www.cadh5.com/farfiles"
               TextDecorations="Underline"
               TextColor="Blue"
               HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnLinkTapped" />
                <!--JEEWEE-->
                <!--<PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>-->
            </Label.GestureRecognizers>
        </Label>

    </VerticalStackLayout>
</ContentPage>